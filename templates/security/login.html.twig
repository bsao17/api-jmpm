{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container card mt-5">
        <h1>Connexion</h1>

        <div>
            {% if error %}
                <div class="container alert alert-danger">
                    {{ error.message() }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_start(formView) }}
            {{ form_widget(formView) }}
            <button type="submit" class="btn btn-danger my-3">Se connecter</button>
            {{ form_end(formView) }}
        </div>
    </div>

{% endblock %}
